<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.jcapax.jcarlosporcel.profactura.Ventas">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:weightSum="1">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Seleccionar Producto"
            android:id="@+id/textView2" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="1">

            <Spinner
                android:layout_width="190dp"
                android:layout_height="38dp"
                android:id="@+id/spinnerProducto"
                android:layout_weight="0.44" />

            <EditText
                android:layout_width="72dp"
                android:layout_height="wrap_content"
                android:ems="10"
                android:id="@+id/editTextCantidad"
                android:layout_marginTop="0dp"
                android:hint="CANT."
                android:inputType="number" />

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.11"
            android:weightSum="1"
            android:gravity="center">

            <ImageButton
                android:layout_width="0dp"
                android:layout_height="55dp"
                android:id="@+id/bAdicionar"
                android:src="@drawable/add"
                android:focusable="false"
                android:scaleType="fitCenter"
                android:layout_weight="0.61"
                android:clickable="true"
                android:layout_gravity="center_horizontal"
                android:background="#00ffffff" />
        </LinearLayout>

        <ListView
            android:layout_width="wrap_content"
            android:layout_height="238dp"
            android:id="@+id/listViewProductos"
            />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="55dp"
            android:id="@+id/bVender"
            android:src="@drawable/vender"
            android:scaleType="fitCenter"
            android:background="@android:color/transparent" />

    </LinearLayout>
</RelativeLayout>
